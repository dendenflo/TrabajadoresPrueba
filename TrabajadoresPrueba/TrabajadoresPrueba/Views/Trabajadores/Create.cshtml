@model TrabajadoresPrueba.Entidades.Trabajadores

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoDocumento" class="control-label"></label>
                <select asp-for="TipoDocumento" asp-items="ViewBag.codigo" class="form-control"></select>
                <span asp-validation-for="TipoDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NroDocumento" class="control-label"></label>
                <input asp-for="NroDocumento" class="form-control" />
                <span asp-validation-for="NroDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexo" class="control-label"></label>
                <input asp-for="Sexo" class="form-control" />
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDepartamento" class="control-label"></label>
                <select asp-for="IdDepartamento" asp-items="ViewBag.Departamentos" id="Departamento" onchange="SeleccionaDepartamento()" class="form-control"></select>
                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProvincia" class="control-label"></label>
                <select asp-for="IdProvincia" asp-items="ViewBag.Provincias" id="Provincia" onchange="SeleccionaProvincia()" class="form-control"></select>
                <span asp-validation-for="IdProvincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDistrito" class="control-label"></label>
                <select asp-for="IdDistrito" asp-items="ViewBag.Distritos" id="Distritos" class="form-control"></select>
                <span asp-validation-for="IdDistrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>

    function SeleccionaDepartamento() {
        debugger
        var departamento = $("#Departamento").val();
        $("#Provincia").empty();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("listaProvincias", "Trabajadores")',
            dataType: 'json',
             data: { idDepartamento: departamento },
             success: function (data) {

                 debugger
                 //Recorre data y arma combo
                 $.each(data, function (i, data) {
                     $("#Provincia").append('<option value="'
                         + data.id + '">'
                         + data.nombreProvincia + '</option>');
                 });

            },
            error: function (ex) {
                alert('Failed to retrieve cities.' + ex);
            }
         });
    }

    function SeleccionaProvincia() {
        //obtengo valor de combo
        var provincia = $("#Provincia").val();
        //lImpio datos de combo Provincia
        $("#Distritos").empty();
        //Listo datos de Provincia
         $.ajax({
            type: 'POST',
            url: '@Url.Action("listaDistritos", "Trabajadores")',
            dataType: 'json',
             data: { idProvincia: provincia },
             success: function (data) {

                 debugger
                 //Recorre data y arma combo
                 $.each(data, function (i, data) {
                     $("#Distritos").append('<option value="'
                         + data.id + '">'
                         + data.nombreDistrito + '</option>');
                 });

            },
            error: function (ex) {
                alert('Failed to retrieve cities.' + ex);
            }
         });
    }
</script>